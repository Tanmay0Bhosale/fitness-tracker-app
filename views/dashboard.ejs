<%- include('partials/header') %>

<h2>Welcome, <%= user.email %>!</h2>

<!-- BMI and Goal Info -->
<div style="margin-bottom: 20px; background: #f4f4f4; padding: 15px; border-radius: 5px;">
  <p><strong>Height:</strong> <%= user.height %> cm</p>
  <p><strong>Weight:</strong> <%= user.weight %> kg</p>
  <p><strong>BMI:</strong> <%= user.bmi ? user.bmi.toFixed(2) : 'N/A' %></p>
  <p><strong>Goal:</strong> <%= waterGoal %> ml</p>
</div>

<h3>Your meals</h3>

<ul>
  <% meals.forEach(meal => { %>
    <li>
      <strong><%= meal.name %></strong> - <%= meal.calories %> calories
      <small>Logged at: <%= meal.time.toLocaleString() %></small>
    </li>
  <% }) %>
</ul>

<!-- Add Meal Button -->
<a href="/meals/add" class="btn" style="background-color: teal; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">Add Meal</a>

<h3>Your BMI: <%= user.bmi ? user.bmi.toFixed(2) : 'N/A' %></h3>
<h3>Water Intake Today: <%= totalWaterIntake %> ml / <%= waterGoal %> ml</h3>

<%- include('partials/footer') %>
