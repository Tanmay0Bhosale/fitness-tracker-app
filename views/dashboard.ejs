<%- include('partials/header') %>

<style>
  .dashboard-container {
    display: flex;
    gap: 40px;
    margin-top: 30px;
    align-items: flex-start;
    flex-wrap: wrap;
  }

  .user-info, .meal-info {
    background-color: #111;
    padding: 20px;
    border-radius: 10px;
    flex: 1;
    min-width: 300px;
  }

  .user-info h2 {
    margin-top: 0;
  }

  .meal-info ul {
    list-style-type: disc;
    padding-left: 20px;
  }

  .meal-info li {
    margin-bottom: 15px;
  }

  .btn-custom {
    display: inline-block;
    background-color: teal;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 15px;
  }

  h3.section-title {
    margin-top: 0;
  }
</style>

<div class="dashboard-container">

  <!-- User Info -->
  <div class="user-info">
    <h2>Welcome, <%= user.email %>!</h2>
    <p><strong>Height:</strong> <%= user.height %> cm</p>
    <p><strong>Weight:</strong> <%= user.weight %> kg</p>
    <p><strong>BMI:</strong> <%= user.bmi ? user.bmi.toFixed(2) : 'N/A' %></p>
    <p><strong>Goal:</strong> <%= waterGoal %> ml</p>
<p><strong>Water Intake Today:</strong> <%= totalWaterIntake %> ml / <%= waterGoal %> ml</p>
<p><strong>Daily Calorie Goal:</strong> <%= user.weight * 24 %> calories</p>

  </div>

  <!-- Meal Info -->
  <div class="meal-info">
    <h3 class="section-title">Your meals</h3>
    <ul>
      <% meals.forEach(meal => { %>
        <li>
          <strong><%= meal.name %></strong> - <%= meal.calories %> calories
          <br>
          <small>Logged at: <%= meal.time.toLocaleString() %></small>
        </li>
      <% }) %>
    </ul>
    <a href="/meals/add" class="btn-custom">Add Meal</a>
  </div>

</div>

<%- include('partials/footer') %>
